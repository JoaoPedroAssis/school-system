<div class="row align-items-center justify-content-center my-3 w-100 d-flex" xmlns="http://www.w3.org/1999/html">
  <div class="box w-100 mx-4 p-4 shadow ">
    <div class="text-center p-2">
      <h3 class="text-center">Alunos</h3>
      <%= link_to 'Criar Aluno', new_student_path, class: "m-2 btn btn-dark" %>
      <div class="table-responsive">
        <table class="text-center table table-striped">
          <thead class="thead-dark">
          <tr>
            <th>Matricula</th>
            <th>Nome</th>
            <th>Sexo</th>
            <th>Estado civil</th>
            <th>Filiacao</th>
            <th>Endereco</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Esporte preferido</th>
            <th>Escolaridade</th>
            <th>Naturalidade</th>
            <th>Cidade</th>
            <th>Uf</th>
            <th>Pais</th>
            <th>Cargo</th>
            <th>Cpf</th>
            <th>Identidade</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @students.each do |student| %>
            <tr>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.matricula %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.nome %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.sexo %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.estado_civil %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.filiacao %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.endereco %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.telefone %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.email %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.esporte_preferido %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.escolaridade %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.naturalidade %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.cidade %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.uf %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.pais %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.cargo %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.cpf %></td>
              <td style="padding-left: 0; padding-top: 20px;"><%= student.identidade %></td>
              <td>
                <%= link_to student do %>
                  <i class="fa fa-mail-forward"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_student_path(student) do %>
                  <i class="fa fa-rotate-left"></i>
                <% end %>
              </td>
              <td>
                <%= link_to student, method: :delete, data: { confirm: 'VocÃª tem certeza?' } do %>
                  <i class="fa fa-trash" style="color: red"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
