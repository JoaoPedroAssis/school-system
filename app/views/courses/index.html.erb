<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Descricao</th>
      <th>Horas aula</th>
      <th>Vagas total</th>
      <th>Vagas ocupadas</th>
      <th>Data inicio</th>
      <th>Data fim</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.codigo %></td>
        <td><%= course.descricao %></td>
        <td><%= course.horas_aula %></td>
        <td><%= course.vagas_total %></td>
        <td><%= course.vagas_ocupadas %></td>
        <td><%= course.data_inicio %></td>
        <td><%= course.data_fim %></td>
        <td><%= course.teacher %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
